extends layout

block content
  img(src='/public/img/lift-logo-butterfly_only.png', width='200')
  h1=title
  if isZoom
    p Welcome to Lift
    button(id="donateBtn", onclick="openDonateUrl()") Donate
  else
    p You're viewing your Zoom App through the browser.&nbsp;
      a(href=`/install`) Click Here
      | &nbsp;to install your app in Zoom.

append scripts
  if isZoom
    // Access Zoom SDK
    script(src="https://source.zoom.us/zoom-meeting-2.6.0.min.js")
    script(type="module" src='/js/bundle.mjs')
    script(nomodule src='/js/bundle.js')
    script.
      function openDonateUrl() {
        console.log('openDonateUrl');
        zoomSdk.openUrl({url: 'https://www.search.google.com'});
      }